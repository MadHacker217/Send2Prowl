<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
 
<prefwindow 
     title="Fox2iPhone Preferences"
     xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
     id="basic-config-dialog">
     
	<prefpane label="Fox2iPhone Preferences">
		<preferences>
			<preference id="fox2iphone-autorun" name="extensions.fox2iphone.autorun" type="bool"/>
			<preference id="fox2iphone-api" name="extensions.fox2iphone.api" type="string"/>
		</preferences>
		
		<groupbox>
			<caption label="Settings"/>
			<grid>
				<columns>
					<column flex="4"/>
					<column flex="1"/>
				</columns>
				<rows>
					<row>
						<label control="api" value="API Code: "/>
						<textbox id="fox2iphone-api" preference="fox2iphone-api"/>
					</row>
				</rows>
			</grid>
		</groupbox>	
		
	</prefpane>
 
</prefwindow>
